[color]
    diff = auto
    status = auto
    branch = auto

[alias]
    rewind = reset --hard HEAD^
    cp = cherry-pick
    br = branch -vv
    co = checkout
    ci = commit
    di = diff
    st = status
    bu=branch -u origin/master
    showbr = log -U git-svn..
    cl = clean -d -fx ""
    ls= log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset %C(yellow)%d' --abbrev-commit
    ll= log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset %C(yellow)%d' --abbrev-commit -10
    so= show --pretty="" --name-only

    stash-untracked = "!f() {    \
        git stash;               \
        git stash -u;            \
        git stash pop stash@{1}; \
        }; f"
    p = pull --rebase
[svn]
    followparent = true

[commit]
    template = /home/wenjingw/.gitmessage.txt

[log]
    date = relative

# Use only for black background terminal
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    plain = white
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red blink

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

