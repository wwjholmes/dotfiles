	#proxy = fwdproxy:8080

[url "https://github.com/"]
	insteadOf = git://github.com/

[branch]
    autosetuprebase = always
    autosetupmerge = always
[pull]
    rebase = true
[rebase]
    autosquash = true


[branch "master"]
    rebase = true
[init]
	defaultBranch = main
